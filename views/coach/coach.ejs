<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>
<link rel="stylesheet" href="/css/homepage.css">
<link rel="stylesheet" href="/css/coach.css">


<main>
    <% if (coaches.length > 0) { %>
        <h1>Coaches available now</h1>
        <p>List of all the Coaches...</p>

        <!-- Filter down by criteria -->

        <% for (let coach of coaches) { %>
            <div class="grid">
                <article class="card coach_card">
                    <header class="card_header">
                        <h1 class="coach_title"><%= coach.title %></h1>
                    </header>
                    <div class="card_image">
                        <img src="<%= coach.imageURL %>" alt="<%= coach.title %>">
                    </div>
                    <div class="card_content">
                        <h2 class="coach_pricing"><%= coach.price %></h2>
                        <h2 class="coach_summary"><%= coach.description %></h2>
                        <div class="card_actions">
                            <a href="/coach/<%= coach.id %>" class="btn">Grab this Coach (Details)</a>
                        </div>
                    </div>
                </article>
            </div>
        <% } %>
    <% } else { %> 
        <h1>No Products Found </h1>
    <% } %>
    

